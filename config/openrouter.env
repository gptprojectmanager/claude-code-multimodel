# OpenRouter Configuration for Claude Code
# =========================================

# OpenRouter API Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=https://claude-code-multimodel.local
OPENROUTER_APP_NAME=Claude Code Multi-Model

# Model Configuration
# Primary models (high-performance)
OPENROUTER_PRIMARY_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_SECONDARY_MODEL=anthropic/claude-3-haiku

# Fallback models for rate limiting
OPENROUTER_FALLBACK_MODELS=google/gemini-2.0-flash,openai/gpt-4o,meta-llama/llama-3.2-90b-vision

# Alternative providers available on OpenRouter
OPENROUTER_GOOGLE_MODELS=google/gemini-2.0-flash,google/gemini-1.5-pro,google/gemini-1.5-flash
OPENROUTER_OPENAI_MODELS=openai/gpt-4o,openai/gpt-4o-mini,openai/o1-preview
OPENROUTER_ANTHROPIC_MODELS=anthropic/claude-3.5-sonnet,anthropic/claude-3-haiku,anthropic/claude-3-opus
OPENROUTER_META_MODELS=meta-llama/llama-3.2-90b-vision,meta-llama/llama-3.1-405b
OPENROUTER_MISTRAL_MODELS=mistralai/mistral-large-2407,mistralai/mistral-nemo
OPENROUTER_XAI_MODELS=x-ai/grok-beta

# Cost optimization settings
ENABLE_COST_OPTIMIZATION=true
MAX_COST_PER_REQUEST=1.0  # USD
PREFER_CHEAPER_MODELS=false

# Rate limiting and retry configuration
OPENROUTER_MAX_REQUESTS_PER_MINUTE=60
OPENROUTER_MAX_TOKENS_PER_MINUTE=100000
OPENROUTER_RETRY_ATTEMPTS=3
OPENROUTER_RETRY_DELAY=2  # seconds

# Fallback routing configuration
ENABLE_AUTO_FALLBACK=true
FALLBACK_ON_RATE_LIMIT=true
FALLBACK_ON_ERROR=true
FALLBACK_TIMEOUT=30  # seconds

# Provider selection strategy
# Options: cost, performance, availability, round_robin
PROVIDER_SELECTION_STRATEGY=performance

# Model routing preferences
# Format: model_pattern:provider_preference
MODEL_ROUTING_PREFERENCES="claude:anthropic,gpt:openai,gemini:google,llama:meta"

# Cost tracking
ENABLE_OPENROUTER_COST_TRACKING=true
OPENROUTER_COST_LOG_FILE=/tmp/openrouter-usage.log
COST_ALERT_THRESHOLD=50.0  # USD per day

# Debug and monitoring
OPENROUTER_DEBUG=false
OPENROUTER_LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true
REQUEST_LOG_FILE=/tmp/openrouter-requests.log