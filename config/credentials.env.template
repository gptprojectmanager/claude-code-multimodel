# API Credentials Template for Claude Code Multi-Model Integration
# ================================================================
# Copy this file to credentials.env and fill in your values
# IMPORTANT: Keep the actual credentials.env file secure and never commit to version control

# OpenRouter Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=https://claude-code-multimodel.local
OPENROUTER_APP_NAME="Claude Code Multi-Model"

# Google Vertex AI Configuration (using existing gcloud setup)
GOOGLE_CLOUD_PROJECT=your-project-id
VERTEX_AI_LOCATION=us-east5
VERTEX_AI_SERVICE_ACCOUNT=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_API_KEY=your-google-api-key

# Use gcloud auth for authentication (already configured)
USE_GCLOUD_AUTH=true

# GitHub Models Configuration  
GITHUB_TOKEN=your-github-token
GITHUB_MODELS_ENDPOINT=https://models.inference.ai.azure.com
GITHUB_MODELS_API_VERSION=2024-04-01-preview

# Proxy Configuration
PROXY_HOST=0.0.0.0
PROXY_PORT=8080
VERTEX_PROXY_PORT=8081
GITHUB_PROXY_PORT=8082
OPENROUTER_PROXY_PORT=8084

# Security
ENABLE_AUTHENTICATION=false
MASTER_PROXY_API_KEY=proxy-key-12345

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=300
FALLBACK_DELAY=1.0

# Routing Strategy
DEFAULT_ROUTING_STRATEGY=intelligent
ENABLE_AUTO_FALLBACK=true
MAX_FALLBACK_ATTEMPTS=3

# Rate Limiting
RATE_LIMIT_DETECTION_WINDOW=60
RATE_LIMIT_THRESHOLD=0.8

# Cost Tracking
ENABLE_COST_TRACKING=true
ENABLE_COST_OPTIMIZATION=true
DAILY_COST_ALERT_THRESHOLD=50.0
HOURLY_COST_ALERT_THRESHOLD=10.0

# Monitoring
PROMETHEUS_PORT=8090
HEALTH_CHECK_INTERVAL=60